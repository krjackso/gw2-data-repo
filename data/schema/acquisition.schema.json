{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/krjackso/gw2-data-repo/schema/acquisition.schema.json",
  "title": "GW2 Item Acquisition Data",
  "description": "All known acquisition methods for a single Guild Wars 2 item",
  "type": "object",
  "required": ["itemId", "itemName", "lastUpdated", "acquisitions"],
  "additionalProperties": false,
  "properties": {
    "itemId": {
      "type": "integer",
      "description": "GW2 API item ID"
    },
    "itemName": {
      "type": "string",
      "description": "Item name as it appears in game"
    },
    "wikiUrl": {
      "type": "string",
      "format": "uri",
      "description": "GW2 Wiki URL for this item"
    },
    "lastUpdated": {
      "type": "string",
      "format": "date",
      "description": "Date this file was last verified against the wiki (YYYY-MM-DD)"
    },
    "acquisitions": {
      "type": "array",
      "description": "All known ways to obtain this item",
      "items": {
        "$ref": "#/$defs/acquisition"
      }
    }
  },
  "$defs": {
    "acquisition": {
      "type": "object",
      "required": ["type"],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "crafting",
            "mystic_forge",
            "vendor",
            "trading_post",
            "achievement",
            "map_reward",
            "container",
            "salvage",
            "wvw_reward",
            "pvp_reward",
            "wizards_vault",
            "story"
          ],
          "description": "The acquisition method type"
        },
        "outputQuantity": {
          "type": "integer",
          "minimum": 1,
          "default": 1,
          "description": "How many of this item you get from this acquisition"
        },
        "requirements": {
          "type": "array",
          "description": "Items, currencies, or other things needed for this acquisition",
          "items": {
            "$ref": "#/$defs/requirement"
          }
        },
        "metadata": {
          "type": "object",
          "description": "Type-specific metadata for this acquisition method",
          "additionalProperties": true
        }
      }
    },
    "requirement": {
      "type": "object",
      "required": ["type", "quantity"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["item", "currency", "unresolved"]
        },
        "itemId": { "type": "integer" },
        "currencyId": { "type": "integer" },
        "name": { "type": "string" },
        "quantity": { "type": "integer", "minimum": 1 }
      },
      "additionalProperties": false,
      "oneOf": [
        {
          "properties": { "type": { "const": "item" } },
          "required": ["type", "itemId", "name", "quantity"]
        },
        {
          "properties": { "type": { "const": "currency" } },
          "required": ["type", "currencyId", "name", "quantity"]
        },
        {
          "properties": { "type": { "const": "unresolved" } },
          "required": ["type", "name", "quantity"]
        }
      ]
    }
  }
}
